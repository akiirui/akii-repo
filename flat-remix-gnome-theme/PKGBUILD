# Contributor: Daniel Ruiz de Alegria <daniel@drasite.com>
# Maintainer: Akatsuki Rui <akiirui@outlook.com>

pkgbase=flat-remix-gnome-theme
pkgname=(flat-remix-gnome-theme
         flat-remix-gnome-theme-dark
         flat-remix-gnome-theme-darkest
         flat-remix-gnome-theme-miami
         flat-remix-gnome-theme-miami-dark)
pkgver=20191116
pkgrel=1
pkgdesc="A pretty simple shell theme inspired on material design."
arch=('any')
url="https://drasite.com/flat-remix-gnome"
license=('CC-BY-SA-4.0')
conflicts=(flat-remix-gnome)
source=("https://github.com/daniruiz/${_pkgbase}/archive/${pkgver}.tar.gz")
sha256sums=('97a760a7ba1f02681575869ddd905b908af75a741e8879a100fc958ff778431c')
_pkgbase=flat-remix-gnome

package_flat-remix-gnome-theme() {
    pkgdesc="A pretty simple shell theme inspired on material design."

    cd "${srcdir}/${_pkgbase}-${pkgver}/"
    install -d ${pkgdir}/usr/share/themes
    cp -a Flat-Remix            ${pkgdir}/usr/share/themes/
    cp -a Flat-Remix-fullPanel  ${pkgdir}/usr/share/themes/
}

package_flat-remix-gnome-theme-dark() {
    pkgdesc="A pretty simple shell theme inspired on material design. Dark variant."

    cd "${srcdir}/${_pkgbase}-${pkgver}/"
    install -d ${pkgdir}/usr/share/themes
    cp -a Flat-Remix-Dark           ${pkgdir}/usr/share/themes/
    cp -a Flat-Remix-Dark-fullPanel ${pkgdir}/usr/share/themes/
}

package_flat-remix-gnome-theme-darkest() {
    pkgdesc="A pretty simple shell theme inspired on material design. Darkest variant."

    cd "${srcdir}/${_pkgbase}-${pkgver}/"
    install -d ${pkgdir}/usr/share/themes
    cp -a Flat-Remix-Darkest            ${pkgdir}/usr/share/themes/
    cp -a Flat-Remix-Darkest-fullPanel  ${pkgdir}/usr/share/themes/
}

package_flat-remix-gnome-theme-miami() {
    pkgdesc="A pretty simple shell theme inspired on material design. Miami variant."

    cd "${srcdir}/${_pkgbase}-${pkgver}/"
    install -d ${pkgdir}/usr/share/themes
    cp -a Flat-Remix-Miami              ${pkgdir}/usr/share/themes/
    cp -a Flat-Remix-Miami-fullPanel    ${pkgdir}/usr/share/themes/
}

package_flat-remix-gnome-theme-miami-dark() {
    pkgdesc="A pretty simple shell theme inspired on material design. Miami Dark variant."

    cd "${srcdir}/${_pkgbase}-${pkgver}/"
    install -d ${pkgdir}/usr/share/themes
    cp -a Flat-Remix-Miami-Dark             ${pkgdir}/usr/share/themes/
    cp -a Flat-Remix-Miami-Dark-fullPanel   ${pkgdir}/usr/share/themes/
